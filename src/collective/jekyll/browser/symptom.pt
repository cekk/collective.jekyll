<div tal:attributes="class string:symptom name-${context/serialized_name} ${context/ignored_class}"
     i18n:domain="collective.jekyll">
    <div>
      <span tal:attributes="class string:status diag-${context/status_class}"
            tal:content="context/status_title" />
      <span class="symptomTitle"
            tal:content="context/title" />
    </div>
    <div tal:condition="not:context/status"
         class="symptomDescription">
      <span tal:replace="context/description" />
      <tal:ignored condition="not:context/isIgnored">
      <a tal:define="content nocall:context/content;
                     url content/absolute_url;
                     name context/name"
         tal:attributes="href string:$url/jekyll_ignore_symptom?symptomName=$name"
         i18n:translate="">Ignore</a>
      </tal:ignored>
      <tal:ignored condition="context/isIgnored">
      <span i18n:translate="">Ignored</span> - 
      <a tal:define="content nocall:context/content;
                     url content/absolute_url;
                     name context/name"
         tal:attributes="href string:$url/jekyll_restore_symptom?symptomName=$name"
         i18n:translate="">Restore</a> 
      </tal:ignored>
    </div>
    <div class="symptomHelp">
      <div tal:replace="context/help" />
    </div>
</div>

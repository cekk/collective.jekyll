<div class="diagnosis">
  <div tal:define="status python:'ok' if context.status else 'warning'"
       tal:attributes="class string:status diag-${status}">
    <span tal:replace="status" />
    <span class="arrowDownAlternative">â–¼</span>
  </div>
  <ul class="symptoms hidden">
    <tal:symptoms repeat="symptom context/symptoms">
    <li tal:define="status python:'ok' if symptom.status else 'warning';
                    even repeat/symptom/even"
        tal:attributes="class python:'even' if even else 'odd'">
      <span tal:attributes="class string:status diag-${status}"
            tal:content="status" />
      <span class="symptomTitle"
            tal:content="symptom/title" />
      <span class="symptomHelp"
            tal:content="symptom/help" />
      <span class="symptomDescription"
            tal:content="symptom/description" />
    </li>
    </tal:symptoms>
  </ul>
</div>
